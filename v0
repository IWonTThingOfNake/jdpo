local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local Window = Rayfield:CreateWindow({
   Name = "Rayfield Example Window",
   LoadingTitle = "Rayfield Interface Suite",
   LoadingSubtitle = "by Sirius",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "Big Hub"
   },
   Discord = {
      Enabled = false,
      Invite = "sirius", -- The Discord invite code, do not include discord.gg/
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },
   KeySystem = true, -- Set this to true to use our key system
   KeySettings = {
      Title = "Sirius Hub",
      Subtitle = "Key System",
      Note = "Join the discord (discord.gg/sirius)",
      FileName = "SiriusKey",
      SaveKey = true,
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = "Hello"
   }
})

local Universal = Window:CreateTab("Universal", 4483362458)

        local Button = Universal:CreateButton({
   Name = "Close Exploits",
   Callback = function()
     Rayfield:Destroy()
   end,
})

        
     local Forsaken = Window:CreateTab("Forsaken", 4483362458)

     local stored = {
       KillerChances = {
         Highest = 0
       },
       Forsaken_NextKiller = nil,
       Flag_HighlightKiller = false
     }

     local function getNextKiller()
      for i,v in pairs(game.Players:GetPlayers()) do
           v.leaderstats.KillerChance.Changed:Connect(function(v0)
         stored.KillerChances[v.UserId] = v0

         if v0 > stored.KillerChances.Highest then
           stored.KillerChances.Highest = v0
          stored.Forsaken_NextKiller = v
          end

           return stored.Forsaken_NextKiller
       end
     end
     
local highlightNextForsaken = Forsaken:CreateToggle({
   Name = "Highlight Next Killer",
   CurrentValue = false,
   Flag = "Toggle1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Value)
     stored.Flag_HighlightKiller = Value

     if Value == true then
       while stored.Flag_HighlightKiller == true do
         local nextKiller = getNextKiller()
         game.Players.LocalPlayer.PlayerGui.MainUI.PlayerListHolder.Contents.Players[stored.Forsaken_NextKiller.Name].PlayerInfo.KillerChance.TextColor = Color3.new(1,0,0)
         task.wait(1)
         end
       end
   end,
})
